<div class="container">
  <h4 class="border-bottom">レシピタグ一覧</h4>
  　<div class="row">
      <% @tags.each do |tag| %>
        <div class="col-7 col-sm-4 col-lg-2 offset-1 offset-sm-0 mb-3">
          <%= link_to tag.name, tags_recipe_path(tag.id) %>
        </div>
        <div class="col-3 col-sm-2 col-lg-1 mb-3 text-right">
          <%= tag.recipes.size %>件
        </div>
      <% end %>
    </div>
  </div>
</div>