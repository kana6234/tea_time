<div class="container">
  <h4 class="border_bottom">新規会員登録</h4>
  <div class="row">
    <div class="col px-5 px-sm-0">
      <%= form_with model: @user, url: user_registration_path do |f| %>

        <div class="field">
          <%= f.label :name, "ユーザー名", class: "col-sm-3 offset-sm-2" %>
          <%= f.text_field :name, autofocus: true, class: "col-sm-4 px-0" %>
          <%= render "layouts/error_messages", model: @user, attribute: :name %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 offset-sm-2" %>
          <%= f.email_field :email, autocomplete: "email", class: "col-sm-4 px-0" %>
          <%= render "layouts/error_messages", model: @user, attribute: :email %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-sm-3 offset-sm-2 form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 px-0" %>
          <%= render "layouts/error_messages", model: @user, attribute: :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3 offset-sm-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 px-0" %>
          <%= render "layouts/error_messages", model: @user, attribute: :password_confirmation %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success col-8 offset-2 col-sm-2 offset-sm-4 px-0" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>