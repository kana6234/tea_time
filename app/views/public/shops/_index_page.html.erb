<div class="container">
  <h4 class="row text-center page_title">紅茶のお店</h4>
  <div class="row mb-4">
    <div class="col-8 col-sm-7 offset-sm-1">
      <%= form_with url: shops_search_path, local: true, method: :get, class: "search_form" do |f| %>
          <%= f.text_field :keyword, class: "form-control" %>
          <button type="submit" class="btn">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
      <% end %>
    </div>
    <%= link_to "タグ一覧", tags_shops_path, class: "mx-auto ml-sm-5 btn btn-outline-success text-dark" %>
  </div>
  <%= @shops.size %>件
  <div class="row">
    <div class="col-sm-8 mr-sm-3">
      <% @shop.each do |shop| %>
        <%= link_to shop_path(shop.id), class: "text-dark" do %>
          <%= render 'public/posts/list', post: shop.post %>
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-3 col-lg-2 px-0">
      <div class="border text-center">
        <p class="border_bottom font-weight-bold">地域</p>
        <p>
          <% @prefectures.each do |prefecture| %>
            <%= link_to prefecture.prefecture_name, shops_prefecture_path(prefecture.prefecture_code), class: "text-dark" %><br>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <%= paginate @shop %>
    </div>
  </div>
</div>