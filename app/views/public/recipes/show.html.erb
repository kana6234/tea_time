レシピ詳細画面
  <%= render 'public/users/link', user: @recipe.post.user %>
  <%= @recipe.post.title %>
  <% if current_user.already_favorited?(@recipe.post) %>
    <%= link_to favorites_path(@recipe.post), method: :delete do %>
      ♥<%= @recipe.post.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to favorites_path(@recipe.post), method: :post do %>
      ♡<%= @recipe.post.favorites.count %>
    <% end %>
  <% end %>
  <%= @recipe.post.catchphrase %>
  <% @recipe.post.post_tags.each do |post_tag| %>
    <%= link_to post_tag.tag.name, tags_recipe_path(post_tag.tag.id) %>
  <% end %>
  <%= @recipe.post.introduction %>
  <%= image_tag @recipe.post.thumbnail_image %>
  <%= @recipe.serves %>
  <% @recipe.materials.each do |material| %>
    <%= material.name %>
    <%= material.quantity %>
  <% end %>
  <% @recipe.steps.each do |step| %>
    <%= step.no %>
    <%= step.content %>
  <% end %>
  <% if @recipe.post.user_id == current_user.id %>
  <%= link_to '編集する', edit_recipe_path(@recipe.id) %>
  <%= link_to '削除する', recipe_path(@recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>