レシピ詳細画面
  <%= render 'public/users/link', user: @recipe.post.user %>
  <%= @recipe.post.title %>
  <%= @recipe.post.catchphrase %>
  <%= image_tag @recipe.post.thumbnail_image %>
  <%= @recipe.post.introduction %>
  <%= @recipe.serves %>
  <% @materials.each do |material| %>
    <%= material.name %>
    <%= material.quantity %>
  <% end %>
  <% @steps.each do |step| %>
    <%= step.no %>
    <%= step.content %>
  <% end %>
  <% if @recipe.post.user_id == current_user.id %>
  <%= link_to '編集する', edit_recipe_path(@recipe.id) %>
  <%= link_to '削除する', recipe_path(@recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>