<div class="container">
  <h4 class="row text-center title">紅茶のレシピ</h4>
  <%= render 'search_form' %>
  <%= @questions.count %>件
  <div class="row">
    <div class="col-sm-8 mr-sm-3">
    <% @questions.each do |question| %>
      <%= link_to question_path(question.id), class: "text-dark" do %>
        <%= render 'public/questions/list', question: question %>
      <% end %>
    <% end %>
    </div>
    <div class="col-sm-3 col-lg-2 px-0">
      <div class="border text-center">
        <p class="border-bottom">タグ</p>
        <p><% @tags.each do |tag| %>
          <%= link_to tag.name, tags_item_path(tag.id), class: "text-dark" %><br>
        <% end %></p>
      </div>
    </div>
  </div>
</div>