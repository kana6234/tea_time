<div class="container">
  <h4 class="row text-center title"><%= @user.name %>の投稿履歴</h4>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-6">
        <% if post.recipe.present? %>
          <%= link_to recipe_path(post.recipe.id) do %>
            <%= render 'public/posts/list', post: post %>
          <% end %>
        <% elsif post.shop.present? %>
          <%= link_to shop_path(post.shop.id) do %>
            <%= render 'public/posts/list', post: post %>
          <% end %>
        <% else %>
          <%= link_to item_path(post.item.id) do %>
            <%= render 'public/posts/list', post: post %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>