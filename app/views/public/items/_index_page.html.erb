<div class="container">
  <h4 class="row text-center page_title">茶葉、紅茶用品</h4>
  <div class="row mb-4">
    <div class="col-8 col-sm-7 offset-sm-1">
      <%= form_with url: items_search_path, local: true, method: :get, class: "search_form" do |f| %>
          <%= f.text_field :keyword, class: "form-control" %>
          <button type="submit" class="btn">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
      <% end %>
    </div>
    <%= link_to "タグ一覧", tags_items_path, class: "mx-auto ml-sm-5 btn btn-outline-success text-dark" %>
  </div>
  <%= @items.size %>件
  <div class="row">
    <div class="col-sm-8 mr-sm-3">
      <% @item.each do |item| %>
        <%= link_to item_path(item.id), class: "text-dark" do %>
          <%= render 'public/posts/list', post: item.post %>
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-3 col-lg-2 px-0">
      <div class="border text-center">
        <p class="border_bottom font-weight-bold">紅茶の種類</p>
        <p>
          <% @tags.each do |tag| %>
            <%= link_to tag.name, tags_item_path(tag.id), class: "text-dark" %><br>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <%= paginate @item %>
    </div>
  </div>
</div>