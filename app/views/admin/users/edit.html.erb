<%= flash[:alert] %>
<%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
  <%= @user.id %>
  <%= f.label :name, "名前" %>
  <%= f.text_field :name, autofocus: true %>
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <%= f.label :introduction, "自己紹介" %>
  <%= f.text_field :introduction, autofocus: true %>
  <%= f.label :is_active, "ステータス" %>
  <%= f.radio_button :is_deleted, "false" %>
  <%= f.label :is_deleted, "有効", for: "customer_is_deleted_false" %>
  <%= f.radio_button :is_deleted, "true" %>
  <%= f.label :is_deleted, "退会", for: "customer_is_deleted_true" %>
  <%= f.submit "変更を保存" %>
<% end %>