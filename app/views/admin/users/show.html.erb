<div class="container">
  <h4 class="border_bottom"><%= @user.name %>さんの会員情報詳細</h4>
  <div class="row mb-3 border-bottom">
    <div class="col-5 col-sm-3 col-lg-2 pr-0 border-right">ID</div>
    <div class="col">
      <%= @user.id %>
    </div>
  </div>
  <div class="row mb-3 border-bottom">
    <div class="col-5 col-sm-3 col-lg-2 pr-0 border-right">ユーザー名</div>
    <div class="col">
      <%= @user.name %>
    </div>
  </div>
  <div class="row mb-3 border-bottom">
    <div class="col-5 col-sm-3 col-lg-2 pr-0 border-right">メールアドレス</div>
    <div class="col">
      <%= @user.email %>
    </div>
  </div>
  <div class="row mb-3 border-bottom">
    <div class="col-5 col-sm-3 col-lg-2 pr-0 border-right">自己紹介</div>
    <div class="col">
      <%= @user.introduction %>
    </div>
  </div>
  <div class="row mb-3 border-bottom">
    <div class="col-5 col-sm-3 col-lg-2 pr-0 border-right">画像</div>
    <div class="col">
      <%= image_tag @user.get_profile_image %>
    </div>
  </div>
  <div class="row mb-3 border-bottom">
    <div class="col-5 col-sm-3 col-lg-2 pr-0 border-right">ステータス</div>
    <div class="col">
      <div class="<%= @user.is_deleted ? "text-secondary" : "text-success" %>"><%= @user.is_deleted ? "退会" : "有効" %></div>
    </div>
  </div>
<%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success btn-lg px-3" %>