<div class="container">
  <h4 class="border_bottom">ユーザー一覧</h4>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">ユーザー名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, admin_user_path(user.id), class: "text-dark" %></td>
            <td><%= user.email %></td>
            <td>
              <div class="<%= user.is_deleted ? "text-secondary" : "text-success" %>"><%= user.is_deleted ? "退会" : "有効" %></div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @users %>
</div>