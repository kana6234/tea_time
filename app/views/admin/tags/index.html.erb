<% @tags.each do |tag| %>
  <% if tag.tea_name? %>
    <%= link_to admin_tag_path(tag, tag: {tea_name: false}), method: :patch do %>
      <i class="fa-solid fa-leaf"></i>
    <% end %>
  <% else %>
    <%= link_to "＋", admin_tag_path(tag, tag: {tea_name: true}), method: :patch %>
  <% end %>
  <%= tag.id %>
  <%= tag.name %>
  <%= tag.posts.size %>
  <%= link_to "削除", admin_tag_path(tag.id), method: :delete, method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>